{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"lib": [
			"es5",
			"dom",
			"es2015.promise"
		],
		"removeComments": true,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"listFiles": true,
		"isolatedModules": false,
		"moduleResolution": "node",
		"suppressImplicitAnyIndexErrors": true,
		"declaration": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"noUnusedLocals": true
	},
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"node_modules"
	],
	"compileOnSave": false
}
